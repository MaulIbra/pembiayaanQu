            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Nomor Handphone"
            android:textColor="@color/textColor"
            app:layout_constraintEnd_toEndOf="@+id/namaLengkap"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/namaLengkap"
            app:layout_constraintTop_toBottomOf="@+id/namaLengkap" />

        <EditText
            android:id="@+id/nomorHP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_edit_text"
            android:hint="@string/nomor_handphone"
            android:padding="8dp"
            android:inputType="phone"
            android:textSize="13dp"
            android:textColor="@color/textColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/noHandphoneView"
            app:layout_constraintTop_toBottomOf="@+id/noHandphoneView" />

        <TextView
