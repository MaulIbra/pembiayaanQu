                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_edit_text"
                android:hint="@string/no_npwp"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
