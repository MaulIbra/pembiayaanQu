                android:textColor="@color/textColor"
                android:inputType="number"
                android:fontFamily="@font/volte"
                app:layout_constraintStart_toStartOf="@+id/noNPWPView"
                app:layout_constraintTop_toBottomOf="@+id/noNPWPView" />


            <TextView
                android:id="@+id/noKTPView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="14dp"
                android:text="Nomor KTP"
                android:textColor="@color/silver"
                app:layout_constraintStart_toStartOf="@+id/noNPWP"
                app:layout_constraintTop_toBottomOf="@+id/noNPWP" />


            <EditText
                android:id="@+id/noKTP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_edit_text"
                android:hint="@string/no_ktp"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="13dp"
                android:textColor="@color/textColor"
                android:inputType="text"
                android:fontFamily="@font/volte"
                app:layout_constraintStart_toStartOf="@+id/noKTPView"
                app:layout_constraintTop_toBottomOf="@+id/noKTPView" />


            <TextView
                android:id="@+id/lamaBekerjaUsahaView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="14dp"
                android:text="Lama Bekerja / Usaha (Bulan)"
                android:textColor="@color/silver"
                app:layout_constraintStart_toStartOf="@+id/noKTP"
                app:layout_constraintTop_toBottomOf="@+id/noKTP" />


            <EditText
                android:id="@+id/lamaBekerjaUsaha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_edit_text"
                android:hint="@string/lama_bekerja_usaha"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="13dp"
                android:textColor="@color/textColor"
                android:inputType="number"
                android:fontFamily="@font/volte"
                app:layout_constraintStart_toStartOf="@+id/lamaBekerjaUsahaView"
                app:layout_constraintTop_toBottomOf="@+id/lamaBekerjaUsahaView" />


            <TextView
                android:id="@+id/namaPerusahaanSaatBekerjaUsahaView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="14dp"
                android:text="Nama perusahaan saat bekerja / usaha"
                android:textColor="@color/silver"
                app:layout_constraintStart_toStartOf="@+id/lamaBekerjaUsaha"
                app:layout_constraintTop_toBottomOf="@+id/lamaBekerjaUsaha" />


            <EditText
                android:id="@+id/namaPerusahaanSaatBekerjaUsaha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_edit_text"
                android:hint="@string/nama_perusahaan_saat_bekerja_usaha"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="13dp"
                android:textColor="@color/textColor"
                android:inputType="text"
                android:fontFamily="@font/volte"
                app:layout_constraintStart_toStartOf="@+id/namaPerusahaanSaatBekerjaUsahaView"
                app:layout_constraintTop_toBottomOf="@+id/namaPerusahaanSaatBekerjaUsahaView" />



            <TextView
                android:id="@+id/jumlahPengajuanPembiayaanView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="14dp"
                android:text="Jumlah pengajuan pembiayaan (Rp)"
                android:textColor="@color/silver"
                app:layout_constraintStart_toStartOf="@+id/namaPerusahaanSaatBekerjaUsaha"
                app:layout_constraintTop_toBottomOf="@+id/namaPerusahaanSaatBekerjaUsaha" />


            <EditText
                android:id="@+id/jumlahPengajuanPembiayaan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
