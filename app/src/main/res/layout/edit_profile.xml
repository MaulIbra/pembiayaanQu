                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_edit_text"
                android:hint="@string/nomor_handphone"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="13dp"
                android:textColor="@color/textColor"
                android:inputType="phone"
                android:fontFamily="@font/volte"
                app:layout_constraintStart_toStartOf="@+id/nomorHPView"
                app:layout_constraintTop_toBottomOf="@+id/nomorHPView" />

            <TextView
                android:id="@+id/umurView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="14dp"
                android:text="Umur"
                android:textColor="@color/silver"
                app:layout_constraintStart_toStartOf="@+id/nomorHP"
                app:layout_constraintTop_toBottomOf="@+id/nomorHP" />


            <EditText
                android:id="@+id/umur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_edit_text"
                android:hint="@string/umur"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="13dp"
                android:textColor="@color/textColor"
                android:inputType="number"
                android:fontFamily="@font/volte"
                app:layout_constraintStart_toStartOf="@+id/umurView"
                app:layout_constraintTop_toBottomOf="@+id/umurView" />


            <TextView
                android:id="@+id/statusView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="14dp"
                android:text="Status"
                android:textColor="@color/silver"
                app:layout_constraintStart_toStartOf="@+id/umur"
                app:layout_constraintTop_toBottomOf="@+id/umur" />


            <EditText
                android:id="@+id/status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_edit_text"
                android:hint="@string/status"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="13dp"
                android:textColor="@color/textColor"
                android:inputType="text"
                android:fontFamily="@font/volte"
                app:layout_constraintStart_toStartOf="@+id/statusView"
                app:layout_constraintTop_toBottomOf="@+id/statusView" />

            <TextView
                android:id="@+id/jenisKelaminView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="14dp"
                android:text="Jenis Kelamin"
                android:textColor="@color/silver"
