            <Button
                android:id="@+id/addcoordinatemaps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/button_maps"
                android:drawableLeft="@drawable/ic_map_black_24dp"
                android:drawablePadding="20dp"
                android:fontFamily="@font/volte"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="Tambah coordinat"
                android:textAllCaps="false"
                android:textSize="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lokasiPengambilanView" />

            <TextView
                android:id="@+id/latitude"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/custom_edit_text"
                android:padding="8dp"
                android:textSize="13dp"
                android:textColor="@color/textColor"
                android:fontFamily="@font/volte"
                app:layout_constraintEnd_toStartOf="@id/longitude"
                app:layout_constraintStart_toStartOf="@+id/addcoordinatemaps"
                app:layout_constraintTop_toBottomOf="@+id/addcoordinatemaps" />

            <TextView
                android:id="@+id/longitude"
