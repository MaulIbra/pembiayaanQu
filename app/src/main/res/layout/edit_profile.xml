                app:layout_constraintTop_toBottomOf="@+id/status" />


            <EditText
                android:id="@+id/jenis_kelamin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_edit_text"
                android:hint="@string/jenis_kelamin"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="13dp"
                android:textColor="@color/textColor"
                android:inputType="text"
                android:fontFamily="@font/volte"
                app:layout_constraintStart_toStartOf="@+id/jenisKelaminView"
                app:layout_constraintTop_toBottomOf="@+id/jenisKelaminView" />

            <TextView
                android:id="@+id/pendidikanTerakhirView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="14dp"
                android:text="Pendidikan Terakhir"
                android:textColor="@color/silver"
                app:layout_constraintStart_toStartOf="@+id/jenis_kelamin"
                app:layout_constraintTop_toBottomOf="@+id/jenis_kelamin" />


            <EditText
                android:id="@+id/pendidikanTerakhir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/custom_edit_text"
                android:hint="@string/pendidikan_terakhir"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="13dp"
